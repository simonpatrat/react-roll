{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "es2019",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@simonpatrat/react-roll": ["./src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
